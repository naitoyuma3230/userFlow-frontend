.content
  display: flex
  flex-direction: column
  width: 70vw
  max-width: 750px

  &__title
    margin-bottom: 3rem

  &__message
    margin-bottom: 2rem

  &__btns
    display: flex
    justify-content: space-between

  .content-btn-center
    margin: auto

.content-search
  &__message
    margin-bottom: 1rem

  &__form
    display: flex
    gap: 0.5rem
    align-items: center

.sub-content
  display: flex
  flex-direction: column

  &:not(:last-child)
    margin-bottom: 8rem

  &__title
    margin-bottom: 2rem

  &__message
    margin-bottom: 1rem

  &__btns
    display: flex
    justify-content: space-between

.form-label
  margin-bottom: 1rem

.form-body
  margin-bottom: 2rem

.form-address
  display: grid
  // stylelint-disable-next-line plugin/no-unsupported-browser-features
  grid-template-columns: 150px 1fr
  gap: 1rem 0.5rem
  align-items: center

.form-office-name
  display: flex
  flex-direction: column
  gap: 1rem
